#parse("/module/mod-form.vm")
<script type="text/javascript" src="$!{BUSIJS_PATH}/staff/staffgroup/group-edit.js?version=$!{JS_VERSION}" ></script>

<h3 class="heading">编辑用户分组</h3>
<div class="alert alert-error hide formValidateMessages">
</div>
<div class="formBox">
    <form id="detailInfoForm" class="form-horizontal  required-validate" style="margin-bottom: 0px;" method="post" action="$!{CONTEXT_PATH}/demo/saveform">
        <div class="formSep">
            <div class="control-group">
                <label class="control-label" for="name">用户组名称：</label>
                <div class="controls">
                    <input type="text" class="input-large htmlcheck required" id="groupName" name="groupName" placeholder="请输入字母、中文" value="$!{dto.groupName}" maxlength="64" />
                </div>
            </div>
        </div>
        <!--	<div class="formSep">
						<div class="control-group">
							<label class="control-label">用户分类：</label>
							<div class="controls">
								<select name="staffClass" class="required">
									#listParam('SYS_STAFF_CLASS')
                                </select>
								
							</div>
						</div>
				</div>-->
        <input type="hidden" name="staffClass" value="10" />
        <div class="formSep">
            <div class="control-group">
                <label class="control-label">所属角色：</label>
                <div class="controls">
                    <select name="roleId" enabled style="width:164px;" class="required">
                        <option value="">
                           --请选择--
                        </option>
                        #foreach($attr in $rolelist)
                        <option value="$!{attr.id}" #if($!{attr.Id}==$!{dto.roleId}) selected #end>
                            $!{attr.roleName}
                        </option>
                        #end
                    </select>
                </div>
            </div>
        </div>
        <div class="">
            <div class="control-group">
                <div class="controls">
                    <button type="button" class="btn btn-info" id="btnFormSave"><i class="icon-ok-sign"></i> 保　存</button>
                    <button type="button" class="btn" id="btnReturn"><i class="icon-reply"></i> 返　回</button>
                </div>
            </div>
        </div>
        <input type="hidden" name="groupId" id="groupId" value="$!{dto.id}" />
    </form>
</div>

			
				
