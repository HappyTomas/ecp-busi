    <div class="new-tit">
    </div>
    <div class="rw-book">
        <div class="new-con clearfix " style="height: 268px;">
            <div class="new-lick">
                <ul class="new-conlist">
                    <div style = "width:960px" class='loading-small'></div>
                </ul>
            </div>
            <div class="new-rank">
                <div class="new-con-bg-none" style="height: 268px">
                    <div class='loading-small'></div>
                </div>
            </div>
        </div>
    </div>
