#parse("sys/sys_param.vm")
#parse("/module/mod-form.vm")
<link rel="stylesheet" href="$!{CSS_PATH}/default/staff/information/member.css" />
<script type="text/javascript" src="$!{BUSIJS_PATH}/staff/buyer-check.js?version=$!{JS_VERSION}" ></script>
 <div id="main">
    <div class="mbox order-list">
        <div class="mbox-head">
            <h3>
                手机绑定
            </h3>
        </div>
        <div class="mbox-body">
            <!--流程-->
            <div style="height:40px;" id="sflex03">
            </div>
            <!--邮件输入框-->
            <div class="email-set-con email-bottom">
                <form class="form-horizontal" id="phoneForm">
                    <div class="control-group">
                        <label class="control-label">手机号码：</label>

                        <div class="controls">
                            <input type="text" id="mobilePhone" name="phone" id="phone" class="mobilePhone required" maxlength="11" placeholder="输入手机号码">
                            
                        </div>
                    </div>
                    <div class="control-group" style="width:650px;">
                        <label class="control-label">
                        <span style="color:red;">* </span>
                            验证码：
                        </label>

                        <div class="controls">
                            <input type="text" placeholder="验证码" name="checkCode" id="checkCode" maxlength="6" class="span1">
                            <input type="button" class="btn" id="checkCodeBtn" value="获取验证码"/>
                            <span id="sendCon"></span>
                        </div>
                    </div>
                    
                </form>
                <div class="control-group" >
                    <div class="controls" style="padding-left:140px;">
                        <button class="btn" id="savePhoneBtn">确认</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>